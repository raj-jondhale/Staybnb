<% layout("/layouts/boilerplate") %>
<style>
  #filters-wrapper {
    display: flex;
    justify-content: space-between; /* filters left, total right */
    align-items: center; /* vertical alignment */
    flex-wrap: wrap; /* responsive wrapping if needed */
    gap: 1rem;
    margin: 1rem 0;
  }

  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 2rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    position: relative;
  }
  .filter {
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .filter:hover {
    opacity: 1;
  }
  .filter p {
    font-size: 0.8rem;
    margin-bottom: 0;
  }
  .active-filter {
    opacity: 1 !important;
    color: #ff385c;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid rgb(221, 221, 221);
    border-radius: 1rem;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    margin-left: auto;
    background-color: white;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
  }
  a {
    text-decoration: none;
    color: black;
  }
  /* Responsive styles */
  @media (max-width: 768px) {
    #filters {
      gap: 1rem;
      padding: 0.5rem;
      overflow-x: auto;
      flex-wrap: nowrap;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE and Edge */
      margin-top: 2rem;
    }

    #filters::-webkit-scrollbar {
      display: none; /* Chrome, Safari, Opera */
    }

    .filter {
      min-width: 60px;
      flex-shrink: 0;
    }

    .tax-toggle {
      position: fixed;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      z-index: 1000;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
      margin-left: 0;
      white-space: nowrap;
    }
  }

  @media (max-width: 576px) {
    .filter p {
      font-size: 0.7rem;
    }

    .filter i {
      font-size: 1.2rem;
    }

    .tax-toggle {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
<div id="filters-wrapper">
  <div id="filters">
    <a
      href="/listings"
      class="filter <%= selectedCategory === 'all' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-globe"></i></div>
      <p>All Listings</p>
    </a>
    <a
      href="/listings?category=trending"
      class="filter <%= selectedCategory === 'trending' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>
    <a
      href="/listings?category=rooms"
      class="filter <%= selectedCategory === 'rooms' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>
    <a
      href="/listings?category=iconic_cities"
      class="filter <%= selectedCategory === 'iconic_cities' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </a>
    <a
      href="/listings?category=mountains"
      class="filter <%= selectedCategory === 'mountains' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </a>
    <a
      href="/listings?category=castles"
      class="filter <%= selectedCategory === 'castles' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </a>
    <a
      href="/listings?category=pools"
      class="filter <%= selectedCategory === 'pools' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>
    <a
      href="/listings?category=camping"
      class="filter <%= selectedCategory === 'camping' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>
    <a
      href="/listings?category=farms"
      class="filter <%= selectedCategory === 'farms' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </a>
    <a
      href="/listings?category=arctic"
      class="filter <%= selectedCategory === 'arctic' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </a>
    <a
      href="/listings?category=domes"
      class="filter <%= selectedCategory === 'domes' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </a>
    <a
      href="/listings?category=boats"
      class="filter <%= selectedCategory === 'boats' ? 'active-filter' : '' %>"
    >
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Ships</p>
    </a>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings){ %>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="ListingImage"
        style="height: 18rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-In")%> /night
          <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
          <!-- .toLocaleString("en-In")  -->
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
